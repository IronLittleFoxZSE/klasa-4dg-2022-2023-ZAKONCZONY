<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FirstPracticalTaskApp.MainPage">

    <StackLayout>
        <Label Text="{Binding Title}"
               FontSize="Large"
               VerticalOptions="CenterAndExpand"
               HorizontalOptions="Center"
               />
        <Button Text="Wyświetl zdjęcia karuzela"
                x:Name="buttonShowImageCarousel"
                Clicked="buttonShowImageCarousel_Clicked"/>
        <Button Text="Wyświetl zdjęcia lista"
                x:Name="buttonShowImageList"
                Clicked="buttonShowImageList_Clicked"/>
        <Button Text="Dodaj zdjęcie"
                x:Name="buttonShowAddPhoto"
                Clicked="buttonShowAddPhoto_Clicked"/>
    </StackLayout>

</ContentPage>
