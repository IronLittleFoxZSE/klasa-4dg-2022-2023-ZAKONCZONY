@model List<PersonDto>

<h1>Lista wszystkich osób</h1>

<table class="table table-striped">
    <tr>
        <td>Imie</td>
        <td>Nazwisko</td>
        <td>Wiek</td>
        <td>Edycja</td>
        <td>Usuń</td>
    </td>
    @foreach (PersonDto item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Surname</td>
            <td>@item.Age</td>
            <td>@Html.ActionLink("Edytuj", "EditPerson", "People", new { id = item.Id })</td>
            <td>@Html.ActionLink("Usuń", "DeletePerson", "People", new { id = item.Id })</td>
        </tr>
    }
</table>

<a asp-controller="People" asp-action="CreatePerson">Dodaj osobę</a>